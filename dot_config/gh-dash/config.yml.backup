# yaml-language-server: $schema=https://dlvhdr.github.io/gh-dash/configuration/gh-dash/schema.json
prSections:
- title: My Created
  filters: is:open author:@me sort:updated-desc

- title: For Review (Autobuild)
  filters: >-
    is:open review-requested:@me 
    repo:linkedin-multiproduct/autobuild 
    repo:linkedin-multiproduct/lipy-autobuild-db 
    repo:linkedin-multiproduct/lipy-autobuild-daemon-base
    repo:linkedin-multiproduct/lipy-autobuild-common
    repo:linkedin-multiproduct/build-orchestrator
  type: null

- title: For Review (All)
  filters: is:open review-requested:@me
  type: null

# - title: Involved
#   filters: is:open involves:@me -author:@me
#   type: null

issuesSections:
- title: My Issues
  filters: is:open author:@me
- title: Assigned
  filters: is:open assignee:@me
- title: Involved
  filters: is:open involves:@me -author:@me
repo:
  branchesRefetchIntervalSeconds: 30
  prsRefetchIntervalSeconds: 60
defaults:
  preview:
    open: true
    width: 60
  prsLimit: 20
  issuesLimit: 20
  view: prs
  layout:
    prs:
      updatedAt:
        width: 5
      createdAt:
        width: 5
      repo:
        width: 20
      author:
        width: 15
      authorIcon:
        hidden: false
      assignees:
        width: 20
        hidden: true
      base:
        width: 15
        hidden: true
      lines:
        width: 15
    issues:
      updatedAt:
        width: 5
      createdAt:
        width: 5
      repo:
        width: 15
      creator:
        width: 10
      creatorIcon:
        hidden: false
      assignees:
        width: 20
        hidden: true
  refetchIntervalMinutes: 30
keybindings:
  universal:
    # Vim-like navigation
    - key: g
      name: open lazygit
      command: >
        cd {{.RepoPath}} && lazygit
    - key: "ctrl+d"
      name: scroll down half page
      builtin: true
    - key: "ctrl+u"
      name: scroll up half page
      builtin: true

  issues: []

  prs:
    # Repository and editor access
    - key: n
      name: open repo in nvim
      command: >
        cd {{.RepoPath}} && nvim

    - key: C
      name: review pr in nvim
      command: >
        tmux new-window -c {{.RepoPath}} '
        nvim -c ":silent Octo pr edit {{.PrNumber}}"'

    # View PR diffs (side-by-side with delta)
    - key: d
      name: view diff (side-by-side)
      command: >
        cd {{.RepoPath}} &&
        gh pr diff {{.PrNumber}} |
        delta --side-by-side --line-numbers --paging=always

    # View changed files list
    - key: f
      name: view changed files
      command: >
        cd {{.RepoPath}} &&
        gh pr diff {{.PrNumber}} --name-only |
        fzf --preview 'gh pr diff {{.PrNumber}} -- {} | delta --side-by-side'
        --preview-window=right:70%

    # View full diff in less (for searching with /)
    - key: D
      name: view full diff (searchable)
      command: >
        cd {{.RepoPath}} &&
        gh pr diff {{.PrNumber}} | less -R

    # Checkout PR branch locally
    - key: c
      name: checkout pr branch
      command: >
        cd {{.RepoPath}} &&
        gh pr checkout {{.PrNumber}}

    # View PR in browser
    - key: b
      name: open pr in browser
      command: >
        gh pr view {{.PrNumber}} --web

    # View PR checks/CI status
    - key: s
      name: view pr checks
      command: >
        cd {{.RepoPath}} &&
        gh pr checks {{.PrNumber}}

    # View PR comments
    - key: m
      name: view pr comments
      command: >
        cd {{.RepoPath}} &&
        gh pr view {{.PrNumber}} | less

    # View specific file diff
    - key: F
      name: view file diff (interactive)
      command: >
        cd {{.RepoPath}} &&
        FILE=$(gh pr diff {{.PrNumber}} --name-only | fzf) &&
        gh pr diff {{.PrNumber}} -- "$FILE" |
        delta --side-by-side --line-numbers --paging=always

    # Approve PR
    - key: A
      name: approve pr
      command: >
        cd {{.RepoPath}} &&
        gh pr review {{.PrNumber}} --approve

    # Request changes
    - key: R
      name: request changes
      command: >
        cd {{.RepoPath}} &&
        gh pr review {{.PrNumber}} --request-changes

    # Add comment to PR
    - key: a
      name: add comment
      command: >
        cd {{.RepoPath}} &&
        gh pr comment {{.PrNumber}}

  branches: []
repoPaths:
  linkedin-multiproduct/*: "~/development/work/multiproducts/*"
theme:
  ui:
    sectionsShowCount: true
    table:
      showSeparator: true
      compact: false
pager:
  diff: delta --side-by-side --width ${FZF_PREVIEW_COLUMNS:-$COLUMNS}
confirmQuit: false
showAuthorIcons: true
smartFilteringAtLaunch: false
